{
  "name": "recipe-app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "backend": "nodemon server.js",
    "client": "cd client && npm start",
    "seed": "node scripts/seedDB.js",
    "build": "cd client && npm run build",
    "install": "cd client && npm install",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mvcampbell3/recipe-app.git"
  },
  "author": "Michael Campbell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mvcampbell3/recipe-app/issues"
  },
  "homepage": "https://github.com/Mvcampbell3/recipe-app#readme",
  "dependencies": {
    "bcrypt": "^3.0.8",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.3"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2"
  }
}
